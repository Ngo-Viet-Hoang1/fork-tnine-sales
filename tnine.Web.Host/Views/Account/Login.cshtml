@using tnine.Web.Host.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<main class="d-flex align-items-center justify-content-center vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <img src="your-logo.png" alt="Logo" class="img-fluid" style="max-width: 150px;" />
                        </div>
                        <h2 class="text-center">Welcome back! Please Sign in to continue.</h2>
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-check mb-3">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", @id = "rememberMe" })
                                @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
                            </div>
                            <button type="submit" class="btn btn-primary">Sign in</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("~/Views/Shared/_LoginPartial.cshtml")
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}